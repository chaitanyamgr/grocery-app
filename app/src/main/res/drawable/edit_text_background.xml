<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for EditText -->
    <solid android:color="@color/white" />

    <!-- Corner radius to make it rounded -->
    <corners android:radius="8dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="@color/gray" />

    <!-- Optional padding inside EditText -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
